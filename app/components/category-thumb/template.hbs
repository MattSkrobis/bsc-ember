{{#paper-card data-test-category-item as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline data-test-category-thumb-name}} {{model.name}} {{/text.headline}}
      {{#text.subhead data-test-category-thumb-name}} 
        Ilość produktów w tej kategorii: {{model.products.length}}
      {{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.actions}}
    {{#paper-button}}
      {{#link-to 'categories.category' model data-test-category-show-link}} Produkty {{/link-to}}
    {{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
