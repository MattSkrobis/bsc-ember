{{yield}}
<h1> Koszyk </h1>  

<h3> Produkty </h3>
{{#each shoppingCart.mappedProducts as |product|}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}} {{product.product.name}}{{/text.headline}}
        {{#text.subhead}} {{product.product.price}} zł{{/text.subhead}}
        {{#text.subhead }} W koszyku: {{ product.inCartCount }}{{/text.subhead}}
      {{/title.text}}
    {{/card.title}}
    {{#card.actions}}
      {{#paper-button onClick=(action 'incrementCount' product  )}} Add {{/paper-button}}
      {{#paper-button onClick=(action 'decrementCount' product  )}} Remove {{/paper-button}}
      {{#paper-button onClick=(action 'removeFromCart' product  )}}{{t 'default.remove'}}{{/paper-button}}
    {{/card.actions}}
  {{/paper-card}}
{{/each}}

<h3> Opcje dostawy </h3>  
{{#paper-radio-group
  groupValue=(readonly selectedShippingOption)
  onChange=(action (mut selectedShippingOption)) as |group|}}
  {{#each shippingOptions as |option|}}
    {{#group.radio value=option.name primary=true}} {{option.name}} - {{option.value}} zł {{/group.radio}}
  {{/each}}
{{/paper-radio-group}}

<h3> Suma: {{totalWithShipping}} zł </h3>
