{{input data-test-product-form-name value=changeset.name}}
{{textarea value=changeset.description}}
{{input type='number' value=changeset.sku}}

<ul data-test-product-form-errors>
  {{#each changeset.errors as |errorSet|}}
    {{#each errorSet.validation as |error|}}
      <li>{{error}}</li>
    {{/each}}
  {{/each}}
</ul>

<button data-test-product-form-save-button {{action 'save'}}>Save</button>
<button data-test-product-form-cancel-button {{action 'rollback'}}>Cancel</button>